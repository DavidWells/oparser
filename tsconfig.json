{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./types",
    "declarationMap": true,
    "outDir": "./types",
    "strict": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs"
  },
  "include": ["src/index.js", "src/stringify.js"],
  "exclude": ["node_modules", "**/*.test.js"]
}

{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./types",
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "checkJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.js",
    "src/archive/**/*",
    "src/fixtures/**/*"
  ]
}